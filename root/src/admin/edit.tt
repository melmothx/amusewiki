[%# -*- mode:web -*- %]
[%# loc('A4 paper'); %]
[%# loc('A5 paper'); %]
[%# loc('A6 paper (also suitable for e-readers)'); %]
[%# loc('Letter paper'); %]
[%# loc('Half Letter paper'); %]
[%# loc('Quarter Letter paper'); %]
[%# loc('Generic (fits in A4 and Letter)') %]
[% IF exec_as_root %]
<div class="alert alert-warning">
  <p>
    [% loc('The webserver needs to be reconfigured. Please execute in a root shell the following commands:') %]<br><br>
  </p>
  <pre><code>[% exec_as_root | html %]</code></pre>
</div>
[% END %]

<div class="center">
  <div class="page-header">
    <h1>[% loc('Edit site [_1]', esite.id) %]</h1>
  </div>
</div>

<div style="margin-top: 30px">
  <form method="post" class="form-horizontal"
        id="site-edit-form"
        onsubmit="return amw_confirm()">

    [% UNLESS restricted %]
    <fieldset>
      <legend role="button"
              data-target="#restricted-vars"
              data-toggle="collapse"
              aria-expanded="false"
              aria-controls="restricted-vars">
         [% loc('Restricted configuration variables') %]
         <span class="caret"></span>
      </legend>
      <div id="restricted-vars" class="collapse">

    <div class="form-group">
      <label for="canonical" class="col-sm-3 control-label">
        [% loc('Main canonical hostname, without protocol') %]
      </label>
      <div class="col-sm-9">
        <input type="text"  name="canonical" id="canonical"
               class="form-control" value="[% esite.canonical | html %]" />
      </div>
    </div>
    <div class="form-group">
        <label for="vhosts" class="col-sm-3 control-label">
            [% loc('Virtual hosts, one per line') %]
        </label>
        <div class="col-sm-9">
        <textarea rows="5" name="vhosts" id="vhosts" class="form-control">
          [%- SET vhosts = esite.vhosts_rs -%]
          [%- FOREACH vhost IN vhosts.all %]
          [%- vhost.name | html +%]

          [%- END -%]</textarea>
        </div>
    </div>

    <div class="form-group">
      <label for="binary_upload_max_size_in_mega" class="col-sm-3 control-label">
        [% loc('Max size for uploads in Mb') %]
      </label>
      <div class="col-sm-2">
        <input type="number" min="1"
               name="binary_upload_max_size_in_mega"
               id="binary_upload_max_size_in_mega"
               class="form-control" value="[% esite.binary_upload_max_size_in_mega | html %]" />
      </div>
    </div>

    <div class="form-group">
      <label for="sitegroup" class="col-sm-3 control-label">
        [% loc('Site group') %]
      </label>
      <div class="col-sm-9">
        <input type="text"  name="sitegroup" id="sitegroup"
               class="form-control" value="[% esite.sitegroup | html %]" />
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9">
        <label>
          <input type="checkbox"
                 [% IF esite.cgit_integration %]checked="checked"[% END %]
                 name="cgit_integration" />
          [% loc('View history') %] (CGIT)
        </label>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9">
        <label>
          <input type="checkbox"
                 [% IF esite.mirror_only %]checked="checked"[% END %]
                 name="mirror_only" />
          [% loc('The site is a pure mirror (see the Federation page) and will not allow local files') %]
        </label>
      </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
          <label>
            <input type="checkbox"
                   [% IF esite.active %]checked="checked"[% END %]
                   name="active" />
            [% loc('Active') %]
            ([% loc('affects only the frontend webserver configuration') %])
          </label>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
          <label>
            <input type="checkbox"
                   [% IF esite.allow_hostname_aliases %]checked="checked"[% END %]
                   name="allow_hostname_aliases" />
            [% loc('Do not redirect aliases to canonical') %]
          </label>
        </div>
    </div>
    <div class="form-group">
        <label for="additional_nginx_conf" class="col-sm-3 control-label">
            [% loc('Additional nginx configuration') %]
        </label>
        <div class="col-sm-9">
          <textarea rows="3" name="additional_nginx_conf" id="additional_nginx_conf"
                    class="form-control">[% esite.additional_nginx_conf | html %]</textarea>
        </div>
    </div>


      </div>
    </fieldset>
    <fieldset>
      <legend role="button"
              data-target="#restricted-formats"
              data-toggle="collapse"
              aria-expanded="false"
              aria-controls="restricted-formats">
        [% loc('Restricted format options') %]
         <span class="caret"></span>
      </legend>
      <div id="restricted-formats" class="collapse">

    <div class="form-group">
      <label for="ttdir" class="col-sm-6 control-label">
        [% loc('Directory with templates in the site repository, e.g.
        "templates" (ASCII only). Do not set it unless you know
        exactly what you are doing') %]
      </label>
      <div class="col-sm-6">
        <input type="text"  name="ttdir" id="ttdir"
               class="form-control" value="[% esite.ttdir | html %]" />
        [% loc('This has security implications and must be used only on trusted repositories') %]
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-6 col-sm-6">
        <label>
          <input type="checkbox"
                 [% IF esite.use_luatex %]checked="checked"[% END %]
                 name="use_luatex" />
          [% loc('Use LuaLaTeX instead of XeLaTeX (slower)') %]
        </label>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-6 col-sm-6">
        <label>
          <input type="checkbox"
                 [% IF esite.logo_with_sitename %]checked="checked"[% END %]
                 name="logo_with_sitename" />
          [% loc('The logo has the site name on itself') %]
        </label>
      </div>
    </div>

    <div class="form-group">
      <label for="logo" class="col-sm-6 control-label">
        [% loc('PDF logo') %]
      </label>
      <div class="col-sm-6">
        <input type="text"  name="logo" id="logo"
               class="form-control" value="[% esite.logo | html %]" />
      </div>
        <div class="col-sm-12">
            <p>
            [% loc('The PDF logo value can be either an absolute path
            or just a filename if you choose to install it in the
            TeXlive tree. You can do so with the following commands.
            The last one checks if the file can be found.') %]
            </p>
            <pre>
mkdir -p `kpsewhich -var-value TEXMFHOME`/tex/generic/amusewiki/data
cp mylogo.pdf `kpsewhich -var-value TEXMFHOME`/tex/generic/amusewiki/data
texhash `kpsewhich -var-value TEXMFHOME`
kpsewhich mylogo.pdf
</pre>
        </div>
    </div>
      </div>
    </fieldset>
    [% END %]

    <fieldset>
      <legend role="button"
              data-target="#awm-config-general"
              data-toggle="collapse"
              aria-expanded="false"
              aria-controls="awm-config-general">
        [% loc('General configuration') %]
        <span class="caret"></span>
      </legend>
      <div id="awm-config-general" class="collapse">
    <div class="form-group">
      <label for="sitename" class="col-sm-6 control-label">
        [% loc('Site name') %]
      </label>
      <div class="col-sm-6">
        <input type="text"  name="sitename" id="sitename"
               class="form-control" value="[% esite.sitename | html %]" />
      </div>
    </div>

    <div class="form-group">
      <label for="mode" class="col-sm-6 control-label">
        [% loc('Site mode') %]
      </label>
      <div class="col-sm-6">
        <select name="mode" id="mode" class="form-control">
          <option value="private"
                  [% IF esite.mode == 'private' %]selected="selected"[% END %]>
                  [% loc('Private') %]
          </option>
          <option value="modwiki"
                  [% IF esite.mode == 'modwiki' %]selected="selected"[% END %]>
                  [% loc('Moderated wiki') %]
          </option>
          <option value="blog"
                  [% IF esite.mode == 'blog' %]selected="selected"[% END %]>
            [% loc('Blog') %]
          </option>
          <option value="openwiki"
                  [% IF esite.mode == 'openwiki' %]selected="selected"[% END %]>
            [% loc('Open wiki') %]
          </option>
        </select>
      </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-6 col-sm-6">
          <label>
            <input type="checkbox"
                   [% IF esite.blog_style %]checked="checked"[% END %]
                   name="blog_style" />
            [% loc('Activate the blog-style look and feel') %]
          </label>
        </div>
        <div class="col-sm-offset-6 col-sm-6">
          <label>
            <input type="checkbox"
                   [% IF esite.text_infobox_at_the_bottom %]checked="checked"[% END %]
                   name="text_infobox_at_the_bottom" />
            [% loc('Show the text infobox at the bottom of the texts') %]
          </label>
        </div>
        <div class="col-sm-offset-6 col-sm-6">
          <label>
            <input type="checkbox"
                   [% IF esite.turn_links_to_images_into_images %]checked="checked"[% END %]
                   name="turn_links_to_images_into_images" />
            [% loc('Turn links to images into images (affects site display only, static formats have the link)') %]
          </label>
        </div>
        <div class="col-sm-offset-6 col-sm-6">
          <label>
            <input type="checkbox"
                   [% IF esite.enable_video_widgets %]checked="checked"[% END %]
                   name="enable_video_widgets" />
            [% loc('Turn links without description to YouTube, Vimeo,
            Gmaps into widgets (affects site display only, static
            formats have the link)') %] [EXPERIMENTAL]
          </label>
        </div>
        <div class="col-sm-offset-6 col-sm-6">
          <label>
            <input type="checkbox"
                   [% IF esite.show_preview_when_deferred %]checked="checked"[% END %]
                   name="show_preview_when_deferred" />
            [% loc('If the publication of a text is deferred, list it
            with the teaser and the cover without providing access to
            the body') %]
          </label>
        </div>
        <div class="col-sm-offset-6 col-sm-6">
          <label>
            <input type="checkbox"
                   [% IF esite.lists_are_always_flat %]checked="checked"[% END %]
                   name="lists_are_always_flat" />
            [% loc('Never show teaser and/or cover in text lists') %]
          </label>
        </div>
        <div class="col-sm-offset-6 col-sm-6">
          <label>
            <input type="checkbox"
                   [% IF esite.enable_order_by_sku %]checked="checked"[% END %]
                   name="enable_order_by_sku" />
            [% loc('Enable title ordering by SKU') %]
          </label>
        </div>
        <div class="col-sm-offset-6 col-sm-6">
          <label>
            <input type="checkbox"
                   [% IF esite.enable_backlinks %]checked="checked"[% END %]
                   name="enable_backlinks" />
            [% loc('Enable "What links here" feature') %]
          </label>
        </div>
        <div class="col-sm-offset-6 col-sm-6">
          <label>
            <input type="checkbox"
                   [% IF esite.show_type_and_number_of_pages %]checked="checked"[% END %]
                   name="show_type_and_number_of_pages" />
            [% loc('Show text type and number of pages in the listing') %]
          </label>
        </div>
        <div class="col-sm-offset-6 col-sm-6">
          <label>
            <input type="checkbox"
                   [% IF esite.enable_xapian_suggestions %]checked="checked"[% END %]
                   name="enable_xapian_suggestions" />
            [% loc('Enable search suggestions (did you mean...)') %]
          </label>
        </div>
    </div>

    <div class="form-group">
      <label for="titles_category_default_sorting" class="col-sm-6 control-label">
        [% loc('Default sorting for the category text list') %]
      </label>
      <div class="col-sm-6">
        <select name="titles_category_default_sorting" id="titles_category_default_sorting" class="form-control">
          [% FOREACH sorting IN esite.titles_available_sortings %]
          <option value="[% sorting.name %]"
                  [% IF esite.titles_category_default_sorting == sorting.name %]selected="selected"[% END %]>
            [% loc(sorting.label) %]
          </option>
          [% END %]
        </select>
      </div>
    </div>
    <div class="form-group">
      <label for="home_page" class="col-sm-6 control-label">
        [% loc('Custom home page') %]
      </label>
      <div class="col-sm-6">
        <input type="text"
               id="home_page"
               name="home_page"
               pattern="/[a-z][a-z0-9/-]*"
               value="[% esite.home_page | html %]"
               class="form-control" />
      </div>
    </div>
    <div class="form-group">
      <label for="theme" class="col-sm-6 control-label">
        [% loc('CSS Theme') %]
      </label>
      <div class="col-sm-6">
        <select name="theme" id="theme" class="form-control">
          [% FOREACH theme IN site.bootstrap_theme_list %]
          <option value="[% theme.name %]"
                  [% IF esite.bootstrap_theme == theme.name %]selected="selected"[% END %]>
            [% theme.label %]
          </option>
          [% END %]
        </select>
      </div>
    </div>

    <div class="form-group">
      <label for="bootstrap_alt_theme" class="col-sm-6 control-label">
        [% loc('CSS Alternate Theme (Dark mode, optional)') %]
      </label>
      <div class="col-sm-6">
        <select name="bootstrap_alt_theme" id="bootstrap_alt_theme" class="form-control">
          <option value="">[% loc('None') %]</option>
          [% FOREACH theme IN site.bootstrap_theme_list %]
          <option value="[% theme.name %]"
                  [% IF esite.bootstrap_alt_theme == theme.name %]selected="selected"[% END %]>
            [% theme.label %]
          </option>
          [% END %]
        </select>
      </div>
    </div>


    <div class="form-group">
      <label for="locale" class="col-sm-6 control-label">
        [% loc('Language') %]
      </label>
      <div class="col-sm-6">
        <select id="locale" name="locale" class="form-control">
          [% known_langs = esite.known_langs %]
          [% SET current_language = esite.locale %]
          [% FOREACH lang IN known_langs.keys.sort %]
          <option [% IF current_language == lang %]selected="selected"[% END %]
                  value="[% lang %]">
            [% known_langs.$lang %]
          </option>
          [% END %]
        </select>
      </div>
    </div>

    <div class="form-group">
      <label for="multilanguage" class="col-sm-6 control-label">
        [% loc('Multilanguage: list of whitespace separated language codes') %]
      </label>
      <div class="col-sm-6">
        <input type="text"  name="multilanguage" id="multilanguage"
               class="form-control" value="[% esite.multilanguage | html %]" />
        <div>
          <code>[% site.known_langs_as_string %]</code>
        </div>
      </div>
    </div>

    <div class="form-group">
      <label for="allow_binary_uploads" class="col-sm-6 control-label">
        [% loc('Allow binary uploads to logged in users: list of whitespace separate file extensions') %]
      </label>
      <div class="col-sm-6">
        <input type="text"  name="allow_binary_uploads" id="allow_binary_uploads"
               class="form-control" value="[% esite.allow_binary_uploads | html %]" />
        <p class="help-block">
          [% loc('Available') %]: <code>[% site.known_file_extensions | html %]</code>
        </p>
        <p class="help-block">
          [% loc('JPG, PNG and PDF are always allowed.') %]
        </p>
        <p class="help-block">
          [% loc('Suggested values:') %]<code>webm mp4 mov mp3</code>
        </p>
      </div>
    </div>


    <div class="form-group">
      <label for="magic_question" class="col-sm-6 control-label">
        [% loc('Magic question') %]
      </label>
      <div class="col-sm-6">
        <input type="text"  name="magic_question" id="magic_question"
               class="form-control" value="[% esite.magic_question | html %]" required/>
      </div>
    </div>

    <div class="form-group">
      <label for="magic_answer" class="col-sm-6 control-label">
        [% loc('Magic answer') %]
      </label>
      <div class="col-sm-6">
        <input type="text"  name="magic_answer" id="magic_answer"
               class="form-control" value="[% esite.magic_answer | html %]" required/>
      </div>
    </div>

    <div class="form-group">
      <label for="fixed_category_list" class="col-sm-6 control-label">
        [% loc('Fixed topic list') %]
      </label>
      <div class="col-sm-6">
        <input type="text"  name="fixed_category_list" id="fixed_category_list"
               class="form-control" value="[% esite.fixed_category_list | html %]" />
        <p class="help-block">
          <a href="[% c.uri_for_action('/settings/categories') %]">
            [% loc('Beside topics and authors you can add more categories here') %]
          </a>
        </p>
      </div>
    </div>


    <div class="form-group">
      <label for="siteslogan" class="col-sm-6 control-label">
        [% loc('Site slogan') %]
      </label>
      <div class="col-sm-6">
        <input type="text"  name="siteslogan" id="siteslogan"
               class="form-control" value="[% esite.siteslogan | html %]" />
      </div>
    </div>

    <div class="form-group">
      <label for="mail_notify" class="col-sm-6 control-label">
        [% loc('Notify mail: blank field will disable them') %]
        ([% loc('comma separated list') %])
      </label>
      <div class="col-sm-6">
        <textarea name="mail_notify" id="mail_notify"
                  rows="1"
                  class="form-control">[% esite.mail_notify | html %]</textarea>
      </div>
    </div>

    <div class="form-group">
      <label for="mail_from" class="col-sm-6 control-label">
        [% loc('Site mail (From field)') %]
      </label>
      <div class="col-sm-6">
        <input type="email"  name="mail_from" id="mail_from"
               class="form-control email" value="[% esite.mail_from | html %]" />
      </div>
    </div>

    <div class="form-group">
      <label for="bb_page_limit" class="col-sm-6 control-label">
        [% loc('Bookbuilder page limit (integer)') %]
      </label>
      <div class="col-sm-6">
        <input type="number" min="1" name="bb_page_limit" id="bb_page_limit"
               class="form-control digits" value="[% esite.bb_page_limit | html %]" />
      </div>
    </div>

    <div class="form-group">
      <label for="max_image_dimension" class="col-sm-6 control-label">
        [% loc('Max image dimension in pixels, applies to both width and height') %]
      </label>
      <div class="col-sm-6">
        <input type="number" min="1" name="max_image_dimension" id="max_image_dimension"
               class="form-control digits" value="[% esite.max_image_dimension | html %]" />
      </div>
    </div>



    <div class="form-group">
      <div class="col-sm-offset-6 col-sm-6">
        <label>
          <input type="checkbox"
                 [% IF esite.restrict_mirror %]checked="checked"[% END %]
                 value="ON"
                 name="restrict_mirror" />
          [% loc('Disable /mirror/ URL for anonymous users') %]
        </label>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-6 col-sm-6">
        <label>
          <input type="checkbox"
                 [% IF esite.express_publishing %]checked="checked"[% END %]
                 value="ON"
                 name="express_publishing" />
          [% loc("If the user is allowed to publish, speed up the process skipping the revision page if there are no conflicts and automatically redirect to the published text once it is done.") %]
        </label>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-6 col-sm-6">
        <label>
          <input type="checkbox"
                 [% IF esite.no_autoassign_pubdate %]checked="checked"[% END %]
                 value="ON"
                 name="no_autoassign_pubdate" />
          [% loc("When creating a new text, do not populate the publication date if not provided by the user.") %]
        </label>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-6 col-sm-6">
        <label>
          <input type="checkbox"
                 [% IF esite.use_named_toc %]checked="checked"[% END %]
                 value="ON"
                 name="use_named_toc" />
          [% loc("Use named table of contents anchors instead of numeric ones") %]
        </label>
      </div>
    </div>



    <div class="form-group">
      <div class="col-sm-offset-6 col-sm-6">
        <label>
          <input type="checkbox"
                 [% IF esite.do_not_enforce_commit_message %]checked="checked"[% END %]
                 name="do_not_enforce_commit_message" />
          [% loc('Do not enforce save message') %]
        </label>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-6 col-sm-6">
        <label>
          <input type="checkbox"
                 [% IF esite.enforce_email_commit %]checked="checked"[% END %]
                 name="enforce_email_commit" />
          [% loc('Enforce e-mail on submission') %]
        </label>
      </div>
    </div>



    <div class="form-group">
      <div class="col-sm-offset-6 col-sm-6">
        <label>
          <input type="checkbox"
                 [% IF esite.display_latest_entries_on_special %]checked="checked"[% END %]
                 name="display_latest_entries_on_special" />
          [% loc('Display the latest entries on special pages') %]
        </label>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-6 col-sm-6">
        <label>
          <input type="checkbox"
                 [% IF esite.enforce_manual_uri %]checked="checked"[% END %]
                 name="enforce_manual_uri" />
          [% loc('On text creation, enforce user to choose the URI') %]
        </label>
      </div>
    </div>


    <div class="form-group">
      <div class="col-sm-offset-6 col-sm-6">
        <label>
          <input type="checkbox"
                 [% IF esite.category_uri_use_unicode %]checked="checked"[% END %]
                 name="category_uri_use_unicode" />
          [% loc('Allow Unicode URIs for categories (author, topics). Recommended for non-latin scripts.') %]
        </label>
      </div>
    </div>
    <div class="form-group">
      <label for="feed_enclosure_method" class="col-sm-6 control-label">
        [% loc('Feed enclosure method (OPDS and RSS)') %]
      </label>
      <div class="col-sm-6">
        <select id="feed_enclosure_method" name="feed_enclosure_method" class="form-control">
          [% SET current_feed_enclosure_method = esite.feed_enclosure_method %]
          <option value="stock_epub"
                  [% IF current_feed_enclosure_method == 'stock_epub' %]selected="selected"[% END %]>
            [% loc('EPUB') %]
          </option>
          <option value="first_format"
                  [% IF current_feed_enclosure_method == 'first_format' %]selected="selected"[% END %]>
            [% loc('Highest priority format') %]
          </option>
          <option value="first_attachment"
