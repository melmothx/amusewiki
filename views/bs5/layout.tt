        </span>
      [% IF c.user_exists || site.human_can_edit %]
        <span id="amw-footer-link-newtext">
        <span id="amw-footer-link-newtext-sep">|</span>
      <a href="[% c.uri_for_action('/edit/newtext', ['text']) %]">[% loc('Add a new text') %]</a>
        </span>
      [% END %]
        </div>
        [% IF footer_layout_html %]
        <div>
          [% footer_layout_html %]
        </div>
        [% END %]
      </div>
    </div>
